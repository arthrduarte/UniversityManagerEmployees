@model lab6.Models.ViewModel.SelectEmployeeRole

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Employee.Name" class="control-label"></label>
                <input asp-for="Employee.Name" class="form-control" />
                <span asp-validation-for="Employee.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.UserName" class="control-label"></label>
                <input asp-for="Employee.UserName" class="form-control" />
                <span asp-validation-for="Employee.UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Password" class="control-label"></label>
                <input asp-for="Employee.Password" class="form-control" />
                <span asp-validation-for="Employee.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                @for (int i = 0; i < Model.Roles.Count; i++)
                {
                    <div class="form-check form-check-inline">
                        <input type="hidden" asp-for="Roles[i].RoleId" />
                        <input type="hidden" asp-for="Roles[i].RoleName" />
                        <label class="form-check-label">
                            @Model.Roles[i].RoleName
                            <input class="form-check-input" type="checkbox" asp-for="Roles[i].IsSelected" />
                        </label>
                    </div>
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
