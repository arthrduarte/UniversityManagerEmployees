@model List<lab6.DataAccess.Academicrecord>

@{
    ViewData["Title"] = "Edit All";
}

<h1>Edit All</h1>

<form asp-action="EditAll" method="post">
    <table class="table">
        <thead>
            <tr>
                <th>
                    <a asp-action="EditAll" asp-route-sortOrder="@ViewData["CourseSort"]">Course</a>
                </th>
                <th>
                    <a asp-action="EditAll" asp-route-sortOrder="@ViewData["StudentSort"]">Student</a>
                </th>
                <th>Grade</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(model => Model[i].CourseCode) - @Html.DisplayFor(model => Model[i].CourseCodeNavigation.Title)
                        <input type="hidden" name="academicRecords[@i].CourseCode" value="@Model[i].CourseCode" />
                    </td>
                    <td>
                        @Html.DisplayFor(model => Model[i].StudentId) - @Html.DisplayFor(model => Model[i].Student.Name)
                        <input type="hidden" name="academicRecords[@i].StudentId" value="@Model[i].StudentId" />
                    </td>
                    <td>
                        <input asp-for="@Model[i].Grade" class="form-control" name="academicRecords[@i].Grade" />
                    </td>
                </tr>
            }

        </tbody>
    </table>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
